-- A Lua Make System file

require 'lms.litProgs'

lpTargets = litProgs.targets{
  mainDoc  = 'literateProgs.tex',
  docDir    = 't-literate-progs/doc/context/third/literateProgs',
}

require 'lms.contextMod'

contextMod.targets(lpTargets, {
  moduleFiles = {
    't-literate-progs.mkiv',
    't-literate-progs.lua',
  },
  moduleDir = 't-literate-progs/tex/context/third/literateProgs',
})

